<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#FFFFFF
        </item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">#000</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#FFFFFF</item> <!-- checkbox text color -->
    </style>

    <style name="MyCheckBoxColor" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorControlNormal">#B81D2B</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">#B81D2B</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#B81D2B</item> <!-- checkbox text color -->
    </style>

    <style name="menu_labels_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
